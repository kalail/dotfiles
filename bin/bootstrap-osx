#!/bin/bash
set -eo pipefail

# install cask for binaries
brew tap caskroom/versions
brew tap homebrew/boneyard
brew tap homebrew/versions
brew tap homebrew/completions
brew tap neovim/neovim

# install binaries
brew cask install \
    google-chrome \
    iterm2 \
    sublime-text \
    dropbox \
    spotify \
    viscosity \
    google-hangouts \
    datagrip \
    java6 \
    slack \
    shiftit \
    1password \
    steam \
    java \
    android-studio

# install libraries
brew install \
    python \
    tmux \
    httpie \
    htop \
    libmemcached \
    memcached \
    redis \
    postgresql \
    geoip \
    geoipupdate \
    s3cmd \
    hg \
    node4-lts \
    cdiff \
    watchman \
    watch \
    nvim

# install python packages
pip install \
    virtualenv \
    debug

# link config files
ln -sf ${PWD}/etc/.profile ~/.profile
ln -sf ${PWD}/etc/.bash_aliases ~/.bash_aliases
ln -sf ${PWD}/etc/.tmux.conf ~/.tmux.conf
ln -sf ${PWD}/etc/.gitconfig ~/.gitconfig
ln -sf ${PWD}/etc/Preferences.sublime-settings ~/Library/Application\ Support/Sublime\ Text\ 3/Packages/User/Preferences.sublime-settings

# set up vim
mkdir -p ~/.config/nvim/init.vim && ln -sf ${PWD}/etc/init.vim ~/.config/nvim/init.vim
curl -fLo ~/.config/nvim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

# TODO: We need to copy the monokai.vim file somewhere for vim syntax highlighting to âˆ‘ork.
# cp vendor/molokai/colors
